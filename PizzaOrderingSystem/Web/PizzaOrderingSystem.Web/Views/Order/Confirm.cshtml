@using PizzaOrderingSystem.Data.Models.Enums
@model PizzaOrderingSystem.Web.ViewModels.OrderViewModels.CreateOrderViewModel

@{
    ViewData["Title"] = "Confirm Order";
}

<section class="bg-success">
    <div class="container py-5">
        <div class="card">
            <div class="card-body">
                <div class="row d-flex justify-content-center pb-5">
                    <div class="col-md-7 col-xl-5 mb-4 mb-md-0">
                        <div class="pt-2">
                            <div class="p-2 me-3">
                                <h4>Order Recap</h4>
                            </div>
                            <form asp-action="Create" class="pb-3 mt-3">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <label asp-for="PaymentType" class="control-label">Payment Type</label>
                                <select asp-for="PaymentType" class="form-control mt-2" asp-items="Html.GetEnumSelectList<PaymentType>()"></select>
                                <div class="d-flex flex-row pb-3 mt-3">
                                    @foreach (var card in Model.Cards)
                                    {
                                        <div class="d-flex align-items-center pe-2">
                                            <input class="form-check-input" type="radio" name="radioNoLabel" id="radioNoLabel1"
                                               value="" aria-label="..." checked />
                                        </div>
                                        <div class="rounded border d-flex w-100 p-3 align-items-center">
                                            <p class="mb-0">
                                                <i class="fab fa-cc-mastercard fa-lg text-primary pe-2"></i>@card.CardHolder
                                            </p>
                                            <div class="ms-auto">@card.CardNumber</div>
                                        </div>
                                    }
                                </div>
                                
                                <div class="form-group">
                                    <label asp-for="City" class="control-label">City</label>
                                    <input asp-for="City" class="form-control mt-2" type="text" value="@Model.City" />
                                    <span asp-validation-for="City" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Street" class="control-label mt-2">Street</label>
                                    <input asp-for="Street" class="form-control mt-2" type="text" value="@Model.Street" />
                                    <span asp-validation-for="Street" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="StreetNumber" class="control-label mt-2">Street Number</label>
                                    <input asp-for="StreetNumber" class="form-control mt-2" type="text" value="@Model.StreetNumber" />
                                    <span asp-validation-for="StreetNumber" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ExpectedDelivery" class="control-label mt-2">Expected Delivery</label>
                                    <input asp-for="ExpectedDelivery" class="form-control mt-2" type="text" readonly="readonly" value="@Model.ExpectedDelivery" />
                                    <span asp-validation-for="ExpectedDelivery" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="TotalPrice" class="control-label mt-2">Total Price</label>
                                    <input asp-for="TotalPrice" class="form-control mt-2 text-success" type="text" readonly="readonly" value="@Model.TotalPrice" />
                                    <span asp-validation-for="TotalPrice" class="text-danger"></span>
                                </div>
                                <div class="form-group mt-3">
                                    <input type="submit" value="Confirm Order" class="btn btn-dark" />
                                    <a class="btn btn-dark" asp-controller="Product" asp-action="Index">Cancel and return to website</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
