@model PizzaOrderingSystem.Web.ViewModels.ProductViewModels.DetailsProductViewModel

@{
    ViewData["Title"] = "Details";
}



<div class="bg-dark text-white" style="border-radius: 1rem;">
    <dl class="row">
        <div class="mt-4">
            <h1 class="text-white ml-4 mt-2">Details</h1>
        </div>
        <div class="col-md-4 ms-lg-2">
            <dt class="col-sm-10 mt-2">
                Name:
            </dt>
            <dd class="col-sm-10">
                <p>@Model.Name</p>
            </dd>
            <dt class="col-sm-10">
                Description:
            </dt>
            <dd class="col-sm-10">
                <p>@Model.Description</p>
            </dd>
            <dt class="col-sm-10">
                Price:
            </dt>
            <dd class="col-sm-10">
                <p>@Model.Price</p>
            </dd>
            <dt class="col-sm-10">
                Category Name:
            </dt>
            <dd class="col-sm-10">
               <p>@Model.CategoryName</p>
            </dd>
        </div>
        <div class="col-md-3 mb-3">
            <img class="img-thumbnail mx-auto mt-4" style="width: 400px" src="~/img/@Model.ImageUrl" alt="@Model.Name" />
        </div>
        <div class="ml-4 mt-4 mb-4">
            @if (Model.CategoryName == "Pizza")
            {
                <a class="btn btn-white" asp-action="IndexPizza">Back</a>
            }
            else if (Model.CategoryName == "Dessert")
            {
                <a class="btn btn-white" asp-action="IndexDesserts">Back</a>
            }
            else if (Model.CategoryName == "Salad")
            {
                <a class="btn btn-white" asp-action="IndexSalads">Back</a>
            }
            else if (Model.CategoryName == "Sauce")
            {
                <a class="btn btn-white" asp-action="IndexSauces">Back</a>
            }
            else
            {
                <a class="btn btn-white" asp-action="IndexDrinks">Back</a>
            }
        </div>
    </dl>
</div>
