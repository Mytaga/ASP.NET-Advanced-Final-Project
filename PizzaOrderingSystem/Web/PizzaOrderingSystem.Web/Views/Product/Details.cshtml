@model PizzaOrderingSystem.Web.ViewModels.ProductViewModels.DetailsProductViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Furniture</h4>
    <hr />
    <dl class="row">
        <div class="col-md-4">
            <dt class="col-sm-10 mt-4">
                Name:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-10">
                Description:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-10">
                Price:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => Model.Price)$
            </dd>
            <dt class="col-sm-10">
                Category Name:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CategoryName)
            </dd>
        </div>
        <div class="col-md-8">
            <img class="img-thumbnail mx-auto mt-4" style="width: 300px" src="~/img/@Model.ImageUrl" alt="@Model.Name" />
        </div>
    </dl>
</div>
<div>
    @if (Model.CategoryName == "Pizza")
    {
        <a class="btn btn-dark" asp-action="IndexPizza">Back</a>
    }
    else if (Model.CategoryName == "Dessert")
    {
        <a class="btn btn-dark" asp-action="IndexDesserts">Back</a>
    }
    else if (Model.CategoryName == "Salad")
    {
        <a class="btn btn-dark" asp-action="IndexSalads">Back</a>
    }
    else 
    {
        <a class="btn btn-dark" asp-action="IndexDrinks">Back</a>
    }   
</div>