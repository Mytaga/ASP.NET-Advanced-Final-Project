@model PizzaOrderingSystem.Web.ViewModels.Account.ProfileViewModel

@{
    ViewData["Title"] = "Profile Page";
}

<div class="container">
    <div class="main-body">
        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card bg-dark text-white">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="~/img/@Model.ImageUrl" alt="Profile Image" class="rounded-circle" width="150">
                            <div class="mt-3 text-white">
                                <h3>@Model.UserName</h3>   
                            </div>
                            <div class="mt-3">
                                <a class="btn btn-white" asp-controller="Order" asp-action="UserOrders">View Orders</a>
                            </div>
                        </div>
                    </div>
                </div>
               
            </div>
            <div class="col-md-8">
                <div class="card mb-3 bg-dark text-white">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h5 class="mb-0">First Name</h5>
                            </div>
                            <div class="col-sm-9 text-white">
                                @Model.FirstName 
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h5 class="mb-0">Last Name</h5>
                            </div>
                            <div class="col-sm-9 text-white">
                                @Model.LastName 
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h5 class="mb-0">Email</h5>
                            </div>
                            <div class="col-sm-9 text-white">
                                @Model.Email
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h5 class="mb-0">Phone</h5>
                            </div>
                            <div class="col-sm-9 text-white">
                                @Model.PhoneNumber
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h5 class="mb-0">City</h5>
                            </div>
                            <div class="col-sm-9 text-white">
                                @Model.City
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h5 class="mb-0">Street</h5>
                            </div>
                            <div class="col-sm-9 text-white">
                                @Model.Street 
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h5 class="mb-0">Street Number</h5>
                            </div>
                            <div class="col-sm-9 text-white">
                                @Model.StreetNumber
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h5 class="mb-0">Floor</h5>
                            </div>
                            <div class="col-sm-9 text-white">
                                @Model.Floor
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h5 class="mb-0">Postal Code</h5>
                            </div>
                            <div class="col-sm-9 text-white">
                                @Model.PostCode
                            </div>

                        <div class="row mt-4">
                            <div class="col-sm-12">
                                <a class="btn btn-white" asp-controller="Account" asp-action="Update">Update Profile</a>
                                <a class="btn btn-white" asp-controller="PaymentCard" asp-action="Add">Add Payment Cards</a>                       
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>