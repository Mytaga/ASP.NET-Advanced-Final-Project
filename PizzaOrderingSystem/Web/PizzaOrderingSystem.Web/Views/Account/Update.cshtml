@model PizzaOrderingSystem.Web.ViewModels.Account.UpdateProfileViewModel

@{
    ViewData["Title"] = "Update Profile";
}


<div class="row" style="justify-content:center">
    <div class="col-md-4 bg-dark text-white" style="border-radius: 1rem; width: 500px">
        <h4 class="mt-4 text-white">UPDATE PROFILE</h4>
        <form asp-action="Update" class="text-white" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label mt-3">Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control mt-2" type="tel" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group mb-2 mt-2">
                <label asp-for="ImageUrl" class="form-label text-white"></label>
                <div>
                    <input asp-for="ImageUrl" class="form-control">
                </div>
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="City" class="control-label">City</label>
                <input asp-for="City" class="form-control mt-2" type="text" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Street" class="control-label">Street</label>
                <input asp-for="Street" class="form-control mt-2" type="text" />
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="StreetNumber" class="control-label">Street Number</label>
                <input asp-for="StreetNumber" class="form-control mt-2" type="number" />
                <span asp-validation-for="StreetNumber" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Floor" class="control-label">Floor</label>
                <input asp-for="Floor" class="form-control mt-2" type="number" />
                <span asp-validation-for="Floor" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="PostCode" class="control-label">Post Code</label>
                <input asp-for="PostCode" class="form-control mt-2" type="number" />
                <span asp-validation-for="PostCode" class="text-danger"></span>
            </div>

            <div class="form-group mt-3 mb-3">
                <input type="submit" value="Save" class="btn btn-lg btn-white text-dark" />
                <a class="btn btn-lg btn-white text-dark" asp-action="ViewProfile">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}