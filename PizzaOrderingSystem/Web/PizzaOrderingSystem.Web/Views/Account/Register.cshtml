@using PizzaOrderingSystem.Web.ViewModels.Account
@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        <div class="mb-md-5 mt-md-4 pb-5">
                            <h2 class="fw-bold mb-2 text-uppercase">Register</h2>
                            <form id="registerForm" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <p class="text-white-50 mb-5">Please register account</p>
                                <div class="form-outline form-white mb-4">
                                    <input asp-for="FirstName" id="typeFirstName" class="form-control form-control-lg" />
                                    <label asp-for="FirstName" class="form-label" for="typeFirstNameX">First Name</label>
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                                <div class="form-outline form-white mb-4">
                                    <input asp-for="LastName" id="typeLastName" class="form-control form-control-lg" />
                                    <label asp-for="LastName" class="form-label" for="typeLastNameX">Last Name</label>
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                                    <div class="form-outline form-white mb-4">
                                    <input asp-for="Username" id="typeUsername" class="form-control form-control-lg" />
                                    <label asp-for="Username" class="form-label" for="typeUsernameX">Username</label>
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>
                                <div class="form-outline form-white mb-4">
                                    <input asp-for="Email" id="typeEmailX" class="form-control form-control-lg" />
                                    <label asp-for="Email" class="form-label" for="typeEmailX">Email</label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-outline form-white mb-4">
                                    <input asp-for="Password" id="typePasswordX" class="form-control form-control-lg" />
                                    <label asp-for="Password" class="form-label" for="typePasswordX">Password</label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-outline form-white mb-4">
                                    <input asp-for="ConfirmPassword" id="typeConfirmPasswrdX" class="form-control form-control-lg" />
                                    <label asp-for="ConfirmPassword" class="form-label" for="typeConfirmPasswordX">Confirm Password</label>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                                <button class="btn btn-outline-light btn-lg px-5" type="submit">Register</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}