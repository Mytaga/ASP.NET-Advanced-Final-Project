@model PizzaOrderingSystem.Web.ViewModels.CategoryViewModels.CreateCategoryViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="row bg-dark text-white" style="border-radius: 1rem;">
    <h4 class="mt-3">Create Category</h4>
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-white" />
                <a class="btn btn-white" asp-area="Administration" asp-controller="Home" asp-action="Index">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
