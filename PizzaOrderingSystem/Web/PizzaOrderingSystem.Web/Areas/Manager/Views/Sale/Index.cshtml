@model IEnumerable<PizzaOrderingSystem.Web.ViewModels.SaleViewModels.SaleViewModel>

@{
    ViewData["Title"] = "Sales";
}

<ul class="list-group list-group-light bg-success">
    @foreach (var sale in Model)
    {
        <li class="list-group-item d-flex justify-content-between align-items-center bg-success ">
            <div class="d-flex align-items-center">
                <div class="ms-4">
                    <p class="fw-bold mb-1">Sale Number: @sale.Id</p>
                    <p class="fw-bold mb-1">@sale.SaleDate</p>
                    <p class="text-dark mb-0">@sale.Amount</p>
                </div>
            </div>
        </li>
    }
</ul>


<div>
    <a class="btn btn-dark mt-3" asp-area="Manager" asp-controller="Home" asp-action="Index">Back</a>
    <a class="btn btn-dark mt-3" asp-area="Manager" asp-controller="Sale" asp-action="UpdateSales">Update</a>
</div>

